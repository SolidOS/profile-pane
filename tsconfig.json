{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2015",
      "es2019"
    ],
    "strict": false,
    "outDir": "lib",
    "rootDir": "src/",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true, // otherwise it takes *.d.ts from node_modules see: https://stackoverflow.com/questions/51634361/how-to-force-tsc-to-ignore-node-modules-folder
    "typeRoots": [
      "declarations.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
     "**/*.ttl",
     "declarations.d.ts",
     "dev/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
