:OtherIdForm a ui:Group; 
    ui:weight 0; 
    ui:parts ( 
        :OtherIdField 
        :OtherIconField 
        :OtherLabelField ).

:OtherIdField
    a ui:NamedNodeURIField ;
    ui:label "Account link";
    ui:maxLength "200" ;
