{
  "name": "profile-pane",
  "version": "2.0.0-shadowDom",
  "description": "A SolidOS compatible pane to display a personal profile page",
  "sideEffects": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solidos/profile-pane.git"
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.mjs",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.mjs",
      "require": "./lib/cjs/index.js"
    }
  },
  "files": [
    "/lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npm run clean && npm run typecheck && npm run build-webpack && npm run build-types",
    "build-webpack": "webpack --config webpack.config.mjs --progress",
    "build-types": "tsc --emitDeclarationOnly",
    "lint": "eslint",
    "lint-fix": "eslint --fix",
    "test": "jest --no-coverage",
    "test-coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck-test": "tsc --noEmit -p tsconfig.test.json",
    "prepublishOnly": "npm run test && npm run build",
    "preversion": "npm run lint && npm run typecheck && npm test",
    "postpublish": "git push origin main --follow-tags",
    "start": "webpack serve --config webpack.dev.config.mjs --open"
  },
  "keywords": [
    "solid",
    "profile",
    "pane",
    "solid-panes",
    "solidos"
  ],
  "author": {
    "name": "Angelo Veltens",
    "email": "angelo.veltens@online.de",
    "url": "https://angelo.veltens.org/profile/card#me"
  },
  "license": "MIT",
  "dependencies": {
    "lit-html": "^3.2.1",
    "pane-registry": "^3.0.0",
    "qrcode": "^1.5.4",
    "validate-color": "^2.2.4"
  },
  "peerDependencies": {
    "rdflib": "^2.3.0",
    "solid-logic": "^4.0.1",
    "solid-ui": "^3.0.1"
  },
  "overrides": {
    "solid-logic": "^4.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/parser": "^8.39.0",
    "babel-jest": "^30.0.0",
    "babel-loader": "^10.0.0",
    "chat-pane": "^3.0.0",
    "eslint": "^9.33.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^27.0.0",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "raw-loader": "^4.0.2",
    "rdflib": "^2.3.0",
    "solid-logic": "^4.0.1",
    "solid-ui": "^3.0.1",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
