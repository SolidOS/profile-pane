{
  "name": "profile-pane",
  "type": "module",
  "version": "1.2.1",
  "description": "A SolidOS compatible pane to display a personal profile page",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solidos/profile-pane.git"
  },
  "main": "lib/index.js",
  "files": [
    "/lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npm run clean && make && npm run build-js",
    "build-js": "tsc",
    "lint": "eslint",
    "test": "jest --no-coverage",
    "test-coverage": "jest --coverage",
    "prepublishOnly": "npm run build && npm run lint && npm run test",
    "start": "webpack serve --config webpack.dev.config.js --open"
  },
  "keywords": [
    "solid",
    "profile",
    "pane",
    "solid-panes",
    "solidos"
  ],
  "author": {
    "name": "Angelo Veltens",
    "email": "angelo.veltens@online.de",
    "url": "https://angelo.veltens.org/profile/card#me"
  },
  "license": "MIT",
  "dependencies": {
    "lit-html": "^3.2.1",
    "pane-registry": "^2.5.0",
    "qrcode": "^1.5.4",
    "rdflib": "^2.2.37",
    "solid-ui": "^2.6.1",
    "validate-color": "^2.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "babel-jest": "^30.0.0",
    "babel-loader": "^10.0.0",
    "chat-pane": "^2.5.1",
    "eslint": "^9.33.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^27.0.0",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "solid-logic": "^3.1.1",
    "typescript": "^5.9.2",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
